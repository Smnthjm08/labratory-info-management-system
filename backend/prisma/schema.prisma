generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// schema.prisma

model User {
  id            Int           @id @default(autoincrement())
  firstName     String
  lastName      String
  email         String        @unique
  phone         String
  gender        Gender
  roleId        Int           @default(4)
  role          Role          @relation(fields: [roleId], references: [id])
  address       String
  city          String
  state         String
  pin           String
  qualification String
  password      String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  DigitalSign   DigitalSign[]
}

model Role {
  id    Int      @id @default(autoincrement())
  name  RoleName @unique
  users User[]
}

enum Gender {
  Male
  Female
  PreferNotToSay
}

enum RoleName {
  Admin
  Pathologist
  Technician
  Guest
}

model DigitalSign {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  firstName String
  lastName  String
  updatedAt DateTime @default(now())
  signUrl   String
}
